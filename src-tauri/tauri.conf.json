{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "snipr",
  "version": "0.0.1",
  "identifier": "com.snipr.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "snipr",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENBOTY3Njg3M0MyQUI1NkMKUldSc3RTbzhoM2FXeWtod0k3TEwrSHZGWjZKRHQwNEs1V3hCNUZiRGRvRHkvWS8zWWhDMUp3RDIK",
      "endpoints": [
        "https://github.com/jaym-01/snipr-release/releases/latest/download/latest.json"
      ]
    }
  }
}